@Article{Guhn2020,
  author   = {Martin Guhn and Scott D. Emerson and Peter Gouzouasis},
  date     = {2020},
  title    = {A Population-Level Analysis of Associations Between School Music Participation and Academic Achievement},
  doi      = {https://doi.apa.org/fulltext/2019-34936-001.html},
  url      = {https://psycnet.apa.org/fulltext/2019-34936-001.html},
  abstract = {The present study employed population-level educational records from 4 public school student cohorts (n = 112,916; Grades 7–12) in British Columbia (Canada) to examine relationships between music education (any participation, type of participation, music achievement, and engagement level) and mathematics and science achievement in Grade 10 as well as English achievement in Grades 10 and 12, while controlling for language/cultural background, Grade 7 academic achievement, and neighborhood socioeconomic status. Music participation was related to higher scores on all 4 subjects and these relationships were stronger for instrumental music than vocal music (Cohen’s d range: .28 to .44 [small-medium effect sizes] and .05 to .13 [null-small effect sizes]). School music achievement positively related to scores on all subjects; such relationships were stronger for achievement in instrumental music compared with vocal music. Higher levels of music engagement (number of courses) was related to higher exam scores on all subjects; this pattern was more pronounced for very high engagement in instrumental music (d range: .37 to .55; medium effect sizes) compared with vocal music (d range: .11 to .26; small effect sizes). The effect sizes of these group differences are greater than the effect sizes corresponding to average annual gains of students’ academic achievement during high school—in other words, highly engaged instrumental music students were, on average, academically over 1 year ahead of their peers. The findings suggest that multiyear engagement in music, especially instrumental music, may benefit high school academic achievement. Findings and implications are discussed within the broader interdisciplinary literature on music learning.},
  comment  = {In deze studie worden de verschillen onderzocht tussen de prestaties van studenten die geëngageerd zijn met muziek en de prestaties van studenten die niet geëngageerd zijn met muziek. Er wordt een verschil gemaakt tussen instrumenteel en enkel vocaal.
De conclusies die uit dit onderzoek genomen kunnen worden zijn:
- er is een positieve associatie tussen geëngageerd zijn met muziek en wiskunde
- instrumentale bezigheid is beter dan enkel vocale; maar beide zijn beter dan niet bezig zijn met muziek
- hoe beter/meer je bezig bent met muziek, hoe beter de resultaten; er was echter sneller een limiet gevonden hoeveel beter je kan worden bij vocaal dan bij instrumenteel},
}

@Article{Boyd2013,
  author   = {Joshua Robert Boyd},
  date     = {2013-03},
  title    = {The Relationship between Music Participation and Mathematics Achievement in Middle School Students},
  url      = {https://core.ac.uk/download/pdf/129589679.pdf},
  abstract = {Joshua Boyd. (under the direction of Dr. Leonard W. Parker) School of Education,
Liberty University, March, 2013.
A comparative analysis was used to study the results from a descriptive survey of selected middle school students in Grades 6, 7, and 8. Student responses to the survey tool was used to compare multiple variables of music participation and duration of various musical activities, such as singing and performing on instruments, to the mathematics results from Georgia Criterion-Referenced Competency Test (Georgia Department of Education, 2011. The results were analyzed with the use of the Pearson r correlation coefficient. The intensity of relationships was assessed with analysis of variance (ANOVA). A final t-test of means was conducted to compare the mathematics achievement of students, who reported that they participated in musical activities vs. students, who reported no participation in musical activities. It was found that there was a positive correlation between students’ participation in music and their achievement in mathematics. In addition, there was a positive correlation between the variables of participation in vocal music and brass music, respectively, and mathematics achievement. The greatest correlation was between years of vocal music participation and mathematics achievement. The results from the ANOVA indicated that, when students participated in music for 3 years or more, there was a significant increase in mathematics scores. A final t-test of means indicated that there was no significant difference in the means of  mathematics scores between students who had participated in musical activities in comparison to students who did not participate in musical activities.},
  comment  = {In deze studie worden de punten van leerlingen uit een middelbare school vergeleken met elkaar aan de hand van hun muziekervaring. Er worden verschillende soorten muziekinstrumenten onderscheiden van elkaar, namelijk vocaal, koperblazers, houtblazers en slagwerk. De studenten werden gevraagd om een bevraging in te vullen met welke instrumenten ze bespeelden en hoe lang. Om te vergelijken welke studenten beter scoorden, werden vorige schoolresultaten gebruikt.
Het onderzoek besloot dat muziek weldegelijk een positieve invloed heeft op wiskundige resultaten. Hoe langer men met muziek bezig is, hoe beter de resultaten. 
Enkele nulhypotheses zijn aanvaardt. Dit is te verklaren doordat enkele soorten muziekinstrumenten nog niet zo lang bespeeld werden door de studenten. Onder andere hierdoor komt men op het besluit dat we pas echt een duidelijk verschil zien vanaf dat de leerlingen 3 jaar of langer bezig zijn met muziek.},
}

@Article{Sanders2018,
  author  = {Edel Sanders},
  date    = {2018},
  title   = {Music Learning and Mathematics Achievement: A Real-World Study in English Primary Schools},
  url     = {https://www.researchgate.net/publication/332094067_Music_Learning_and_Mathematics_Achievement_A_Real-World_Study_in_English_Primary_Schools},
  comment = {In deze thesis bevestigt Sanders de hypothese van eerder geschreven studie: Investigating the relationship between musical training and mathematical thinking in children. 

De studie werd uitgevoerd op 200 kinderen tussen de 7-8jaar van 5 verschillende lagere scholen doorheen een volledig schooljaar. 
De relatie tussen wiskundig inzicht en muzikale vormgeving werd getest doormiddel van zangles. De lessen werden opgedeeld in 3 muzikale elementen : vorm, melodie en ritme. Elke groep kinderen focuste op een ander element. In de helft van de lessen maakte de leraar expliciet de connectie met wiskunde, in de andere groepen deed de leraar dit niet. Zelfsal was de relatie tussen muziek en wiskunde duidelijk. 

De studenten van alle subgroepen werden op het einde van het jaar onderworpen aan allerlei testen die zowel hun muzikale vaardigheden als wiskundige kennis testte. 19 van de 24 subgroepen scoorden beter dan voorheen op hun wiskundige kennis.

De studie toont aan dat muzikale vormgeving doormiddel van zang een positief effect heeft op wiskundig inzicht.},
}

