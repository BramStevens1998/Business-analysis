@Article{Sanders2012,
  author  = {Edel Sanders},
  date    = {2012},
  title   = {Investigating the relationship between musical training and mathematical thinking in children},
  url     = {https://www.researchgate.net/publication/269843780_Investigating_the_Relationship_Between_Musical_Training_and_Mathematical_Thinking_in_Children},
  comment = {Deze studie uitgevoerd door Edel Sanders, hoofd van The School of Psychology, The University of New York in Praag, tracht meer context te geven aan de vraag of muzikale vorming het wiskundig denken bevorderd. Sanders deed een studie bij 200 kinderen tussen de 7 en 8 jaar. Voor de duur van 9 maanden kregen de kinderen muzikale vormgeving. Het resultaat van deze studie kan je vinden in haar thesis genaamd Music Learning and Mathematics Achievement: A Real-World Study in English Primary Schools. Deze studie besluit dat muzikale vormgeving op regelmatige basis wel degelijk wiskundig inzicht positief beïnvloedt. 

In de studie bespreekt de auteur tal van anderen die ook onderzoek hebben gedaan naar de relatie tussen wiskunde en muziek, met de nadruk op hoe kinderen wiskundig inzicht ontwikkelen.
Nes en de Lange stellen dat een muziekstuk  een patroon is opgebouwd uit lijnen, punten en bogen. Inzicht in hoe een muziekstuk is opgebouwd vergt ruimtelijk inzicht dat men ook nodig heeft bij het maken van wiskundige berekeningen zoals optellen.
In de studie haalt de auteur het experiment van Rauscher aan dat resulteerde in het befaamde fenomeen het Mozart Effect. Rauscher’s onderzoek wees uit dat mensen die naar Mozart’s Sonate K.448. in D majeur kortstondig een boost kregen in hun ruimtelijk redeneren. 
Men kan de conclusies van deze studie als bedenkelijk beschouwen maar later zijn er nog enkele andere studies uitgevoerd die een link leggen tussen wiskunde en muziek.  
Betreffende link werd in een recente studie van Spelke onderzocht. 
Dit werd in een recente studie van Spelke nogmaals onderzocht.
Drie verschillende leeftijdsgroepen werden onderworpen aan een muzikale opleiding. Spelke kwam tot de conclusie dat de kinderen die middelmatige tot intensieve muzikale opleiding kregen significant hoger scoorden op geometrie en ruimtelijk inzicht.  
Om de bron van deze relatie bloot te leggen, voerde Spelke een experiment uit op peuters. Hierbij werd gekeken naar de duur van de noten en de lengte van visuele objecten. De peuters maakten al snel de connectie tussen de lengte van de objecten en de duratie van de noot en dit suggereert alweer de relatie tussen muzikaal en ruimtelijk inzicht. 
Om de bron van deze relatie bloot te leggen, voerde Spelke een experiment uit op peuters. Hierbij werd gekeken naar de duur van de noten en de lengte van visuele objecten. De peuters maakten al snel de connectie tussen de lengte van de objecten en de duratie van de noot en dit suggereert alweer de relatie tussen muzikaal en ruimtelijk inzicht.  

Later in de studie bespreekt Spelke hoe kinderen wiskundig denken ontwikkelen. Kinderen proberen continue patronen te vinden en structuur te creëren in de wereld. Dit is ook belangrijk bij het maken van muziek. Net zoals een wiskundige probeert de muzikant te zoeken naar patronen en oplossingen te vinden. 
Dit wordt verder door Nes en de Lange beaamt. Een muziekstuk is een patroon, opgebouwd uit lijnen, punten en bogen. Hoe een muziekstuk is opgebouwd vergt ruimtelijk inzicht dat men ook nodig heeft bij het maken van wiskundige berekeningen zoals optellen. 

In deze studie concludeert Sanders dat er wel degelijk een verband is tussen muzikale vormgeving en wiskundig denken. Ze pleit daarom voor meer onderzoek om het curriculum voor kinderen te verbeteren.},
}

@Article{Graziano1999,
  author             = {Graziano, A. B. and Peterson, M. and Shaw, G. L.},
  date               = {1999-03},
  journaltitle       = {Neurological research},
  title              = {Enhanced learning of proportional math through music training and spatial-temporal training.},
  issue              = {2},
  language           = {eng},
  pages              = {139-52},
  volume             = {21},
  abstract           = {It was predicted, based on a mathematical model of the cortex, that early music training would enhance spatial-temporal reasoning. We have demonstrated that preschool children given six months of piano keyboard lessons improved dramatically on spatial-temporal reasoning while children in appropriate control groups did not improve. It was then predicted that the enhanced spatial-temporal reasoning from piano keyboard training could lead to enhanced learning of specific math concepts, in particular proportional math, which is notoriously difficult to teach using the usual language-analytic methods. We report here the development of Spatial-Temporal Math Video Game software designed to teach fractions and proportional math, and its strikingly successful use in a study involving 237 second-grade children (age range six years eight months-eight years five months). Furthermore, as predicted, children given piano keyboard training along with the Math Video Game training scored significantly higher on proportional math and fractions than children given a control training along with the Math Video Game. These results were readily measured using the companion Math Video Game Evaluation Program. The training time necessary for children on the Math Video Game is very short, and they rapidly reach a high level of performance. This suggests that, as predicted, we are tapping into fundamental cortical processes of spatial-temporal reasoning. This spatial-temporal approach is easily generalized to teach other math and science concepts in a complementary manner to traditional language-analytic methods, and at a younger age. The neural mechanisms involved in thinking through fractions and proportional math during training with the Math Video Game might be investigated in EEG coherence studies along with priming by specific music.},
  article-doi        = {10.1080/01616412.1999.11740910},
  comment            = {In de studie wordt aangetoond dat kinderen die zes maanden pianolessen kregen vooruitgang maakten in ruimtelijk denken. Kinderen die deze muziektraining niet kregen boekten geen tot weinig vooruitgang.

Er wordt daarna een verband gezocht tussen ruimtelijk denken en het leren van wiskundige concepten, meerbepaald het verband tussen twee grootheden. De auteurs gaan er van uit dat als er een verband is tussen muzikale training en ruimtelijk denken en er een verband is tussen ruimtelijk denken en de mogelijkheid om wiskunde te leren er bijgevolg een verband is tussen muzikale training en talent voor wiskunde.

Ook voor dit tweede verband hebben de auterus een studie gedaan met een groep kinderen tussen 6 en 8 jaar oud. Iedereen kreeg uitleg over enkele wiskundige concepten via een videospel. Later werd ook de wiskunde kennis van de kinderen via dit spel getest. De kinderen die pianolessen gekregen hadden hoger dan zij zonder muzikale achtergrond.},
  completed          = {19990615},
  history            = {1999/04/01 00:00 [entrez]},
  keywords           = {Child, Female, Humans, Learning/*physiology, Male, *Mathematics, *Music, Neuropsychological Tests, Pilot Projects, *Problem Solving, *Space Perception, *Time Perception, Video Games},
  linking-issn       = {0161-6412},
  location           = {England},
  nlm-unique-id      = {7905298},
  owner              = {NLM},
  print-issn         = {0161-6412},
  publication-status = {ppublish},
